package campeonato;

public class Clube {
		//Atributos:
		private String nome;
		private int pontos;
		private int saldoGols;
		
		
		//Construtor:
		public Clube(String nome,int pontos,int saldoGols) {
			this.nome = nome;
			this.pontos = pontos;
			this.saldoGols = saldoGols;
		}
		
		//MÃ©todos:
		public void ganhar(int saldoGols) {
			this.pontos += 3;
			
		}
		
		public void empatar() {
			
		}
		
		public void perder(int saldoGols) {
			this.pontos -= 3;
		}
	
}
